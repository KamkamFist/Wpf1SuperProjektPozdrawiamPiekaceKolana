<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFF8DC">

    <Grid Grid.Column="4" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button Content="Pobierz" Background="Peru" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Grid.Column="1" Click="Button_Click" Height="42" Width="120"/>
        <Label x:Name="rgbLabel" Grid.Column="1" Content="0,0,0" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" Width="248"/>
        <Label Content="R" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" RenderTransformOrigin="-0.842,0.925"/>
        <Label Content="G" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center"  RenderTransformOrigin="-0.842,0.925"/>
        <Label Content="B" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Top" RenderTransformOrigin="-8.028,0.693" Margin="0,13,0,0"/>
        <Label x:Name="RedCount" Grid.Column="2" Content="255" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center"/>
        <Label x:Name="GreenCount" Grid.Column="2" Content="255" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center"/>
        <Label x:Name="BlueCount" Grid.Column="2" Content="255" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center"/>
        <Slider x:Name="RedSlider" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" Width="572" VerticalAlignment="Center" Maximum="255" ValueChanged="RedSlider_ValueChanged" Value="255" SmallChange="1"/>
        <Slider x:Name="GreenSlider" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="572" Maximum="255" ValueChanged="GreenSlider_ValueChanged" Value="255" SmallChange="1"/>
        <Slider x:Name="BlueSlider" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Width="572" RenderTransformOrigin="0.5,0.5" Height="15" Maximum="255" ValueChanged="BlueSlider_ValueChanged" Value="255" SmallChange="1"/>

        <Rectangle x:Name="ColorRectangle" Fill="#FFFFFF"  Grid.Column="1" HorizontalAlignment="Center" Height="42" Stroke="Black" VerticalAlignment="Center" Width="620"/>
        <Label Grid.Column="1" Content="Dobierz kolor suwakami i zatwierdź przyciskiem" Grid.Row="1" VerticalAlignment="Center" Cursor="" HorizontalAlignment="Left"/>
    </Grid>


</Window>
